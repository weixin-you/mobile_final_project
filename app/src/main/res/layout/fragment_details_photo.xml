<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsPhoto">

    <RelativeLayout
        android:id="@+id/photo_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/original_photo"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/original_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="15dp" />


        <TextView
            android:id="@+id/width"
            android:layout_width="298dp"
            android:layout_height="34dp"
            android:layout_below="@+id/height"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="13dp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="293dp"
            android:layout_height="36dp"
            android:layout_below="@+id/width"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="17dp"
            android:linksClickable="true" />

        <Button
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="Save to Favorite" />

        <TextView
            android:id="@+id/height_label"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/height"
            android:layout_alignBottom="@+id/height"
            android:layout_marginStart="-93dp"
            android:layout_marginBottom="0dp"
            android:text="Height: " />

        <TextView
            android:id="@+id/width_label"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/width"
            android:layout_alignBottom="@+id/width"
            android:layout_marginStart="-89dp"
            android:layout_marginBottom="0dp"
            android:text="Width: " />

        <TextView
            android:id="@+id/url_label"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/url"
            android:layout_alignBottom="@+id/url"
            android:layout_marginStart="-89dp"
            android:layout_marginBottom="-1dp"
            android:text="URL: " />


    </RelativeLayout>


</FrameLayout>